#include <stdio.h>

#define MAX_ROWS 100
#define MAX_COLS 100

int main() {
    int N, M;

    // Saisie des dimensions de la matrice
    printf("Entrez le nombre de lignes de la matrice : ");
    scanf("%d", &N);
    printf("Entrez le nombre de colonnes de la matrice : ");
    scanf("%d", &M);

    int matrice[MAX_ROWS][MAX_COLS];
    int *ptrMatrice = &matrice[0][0];

    printf("Saisie de la matrice :\n");
    for (int i = 0; i < N; ++i) {
        for (int j = 0; j < M; ++j) {
            printf("Matrice[%d][%d] : ", i, j);
            scanf("%d", ptrMatrice + i * M + j);
        }
    }
    printf("\nMatrice :\n");
    for (int i = 0; i < N; ++i) {
        for (int j = 0; j < M; ++j) {
            printf("%d\t", *(ptrMatrice + i * M + j));
        }
        
        printf("\n");
    }

    return 0;
}
